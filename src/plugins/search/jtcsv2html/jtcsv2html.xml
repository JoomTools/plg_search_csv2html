<?xml version="1.0" encoding="utf-8"?>
<extension version="3" type="plugin" group="search" method="upgrade">
	<name>PLG_SEARCH_JTCSV2HTML</name>
	<creationDate>##DATE##</creationDate>
	<author>Guido De Gobbis</author>
	<authorEmail>support@joomtools.de</authorEmail>
	<authorUrl>www.joomtools.de</authorUrl>
	<copyright>Copyright (C) ##YEAR## JoomTools.de. All rights reserved.</copyright>
	<license>GPL v3</license>
	<version>##VERSION##</version>
	<description>PLG_SEARCH_JTCSV2HTML_XML_DESCRIPTION</description>

	<files>
		##FILES##
	</files>

	<languages folder="language">
		##LANGUAGE_FILES##
	</languages>

	<scriptfile>jtcsv2html.scriptfile.php</scriptfile>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_JTCSV2HTML_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_JTCSV2HTML_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					class="btn-group"
					default="1"
					description="PLG_SEARCH_JTCSV2HTML_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_JTCSV2HTML_FIELD_CONTENT_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>

				<field name="search_archived" type="radio"
					class="btn-group"
					default="0"
					description="PLG_SEARCH_JTCSV2HTML_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_JTCSV2HTML_FIELD_ARCHIVED_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>

	<updateservers>
		<server type="extension" priority="1" name="PLG_SEARCH_JTCSV2HTML">https://raw.githubusercontent.com/joomtools/plg_search_jtcsv2html/master/update.xml</server>
	</updateservers>

</extension>
